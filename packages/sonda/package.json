{
  "name": "sonda",
  "version": "0.6.1",
  "description": "Universal visualizer and analyzer for JavaScript and CSS bundles. Works with Vite, Rollup, webpack, Rspack, and esbuild",
  "keywords": [
    "bundle analyzer",
    "bundle visualizer",
    "analyzer",
    "visualizer",
    "source-map",
    "vite",
    "rollup",
    "webpack",
    "rspack",
    "esbuild"
  ],
  "license": "MIT",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/filipsobol/sonda.git",
    "directory": "packages/sonda"
  },
  "homepage": "https://sonda.dev",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    },
    "./esbuild": {
      "types": "./dist/bundlers/esbuild.d.ts",
      "import": "./dist/bundlers/esbuild.mjs",
      "require": "./dist/bundlers/esbuild.cjs"
    },
    "./parcel": {
      "types": "./dist/bundlers/parcel.d.ts",
      "import": "./dist/bundlers/parcel.mjs",
      "require": "./dist/bundlers/parcel.cjs"
    },
    "./rollup": {
      "types": "./dist/bundlers/rollup.d.ts",
      "import": "./dist/bundlers/rollup.mjs",
      "require": "./dist/bundlers/rollup.cjs"
    },
    "./rspack": {
      "types": "./dist/bundlers/webpack.d.ts",
      "import": "./dist/bundlers/webpack.mjs",
      "require": "./dist/bundlers/webpack.cjs"
    },
    "./vite": {
      "types": "./dist/bundlers/rollup.d.ts",
      "import": "./dist/bundlers/rollup.mjs",
      "require": "./dist/bundlers/rollup.cjs"
    },
    "./webpack": {
      "types": "./dist/bundlers/webpack.d.ts",
      "import": "./dist/bundlers/webpack.mjs",
      "require": "./dist/bundlers/webpack.cjs"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "CHANGELOG.md"
  ],
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "prepack": "pnpm run test && pnpm run build && clean-package -rm devDependencies scripts",
    "build:load-source-map": "cd ../load-source-map && pnpm run build",
    "build:html": "cd ../html-report && pnpm run build",
    "build:dist": "rolldown -c && tsc",
    "build": "pnpm run build:load-source-map && pnpm run build:dist && pnpm run build:html"
  },
  "dependencies": {
    "@ampproject/remapping": "^2.3.0",
    "@jridgewell/sourcemap-codec": "^1.5.0",
    "open": "^10.1.0"
  },
  "devDependencies": {
    "@parcel/types": "^2.13.0",
    "@rspack/core": "^1.1.3",
    "@vitest/coverage-v8": "^2.1.5",
    "esbuild": "^0.24.0",
    "load-source-map": "workspace:^",
    "rollup": "^4.27.4",
    "vite": "^5.4.11",
    "vitest": "^2.1.5",
    "webpack": "^5.96.1"
  }
}
